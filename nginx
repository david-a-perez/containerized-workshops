server_tokens off;
access_log /var/log/nginx/containerizedworkshops.access.log;
error_log /var/log/nginx/containerizedworkshops.error.log info;

server {
    listen 80;
    server_name containerizedworkshops.com;

    location /dj_static/ {
        autoindex on;
        alias /var/www/containerizedworkshops.com/static/;
    }

    location ~ ^/(admin|accounts|api-auth|api)/ {
        proxy_pass http://localhost:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;
    }

    location / {
        rewrite ^/(workshops|workshop/[A-Za-z0-9]*|containers)$ / last;
        autoindex on;
        alias /var/www/containerizedworkshops.com/static/;
    }
}
